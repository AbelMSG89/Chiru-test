---
import Layout from "@/layouts/Layout.astro";
import { getStaticLanguagePaths } from "@/i18n/utils";
import { Heading } from "@/components/atoms/Heading";
import { BannerPromotional as BannerPromotionalComponent } from "@/components/molecules/BannerPromotional";

export async function getStaticPaths() {
  return getStaticLanguagePaths();
}

const { locale } = Astro.params;
---

<Layout title="BannerPromotional - Carrusel de Marcas" locale={locale}>
  <main class="container mx-auto p-8">
    <Heading level={1} className="mb-8">
      BannerPromotional - Carrusel de Marcas
    </Heading>
    
    <section class="mb-12">
      <Heading level={2} className="mb-6">
        Ejemplo por defecto
      </Heading>
      
      <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
        <BannerPromotionalComponent client:load />
      </div>
    </section>

    <section class="mb-12">
      <Heading level={2} className="mb-6">
        Carrusel de marcas con auto-reproducción
      </Heading>
      
      <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
        <BannerPromotionalComponent 
          brands={[
            {
              id: "nike",
              imageUrl: "https://via.placeholder.com/630x120/ffffff/000000?text=NIKE",
              imageAlt: "Marca Nike",
              brandName: "Nike"
            },
            {
              id: "adidas",
              imageUrl: "https://via.placeholder.com/630x120/000000/ffffff?text=ADIDAS",
              imageAlt: "Marca Adidas",
              brandName: "Adidas"
            },
            {
              id: "puma",
              imageUrl: "https://via.placeholder.com/630x120/ff6b35/ffffff?text=PUMA",
              imageAlt: "Marca Puma",
              brandName: "Puma"
            }
          ]}
          autoPlayInterval={3000}
          client:load 
        />
      </div>
    </section>

    <section class="mb-12">
      <Heading level={2} className="mb-6">
        Carrusel de marcas sin auto-reproducción
      </Heading>
      
      <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
        <BannerPromotionalComponent 
          brands={[
            {
              id: "coca-cola",
              imageUrl: "https://via.placeholder.com/630x120/e60012/ffffff?text=COCA+COLA",
              imageAlt: "Marca Coca Cola",
              brandName: "Coca Cola"
            },
            {
              id: "pepsi",
              imageUrl: "https://via.placeholder.com/630x120/004b93/ffffff?text=PEPSI",
              imageAlt: "Marca Pepsi",
              brandName: "Pepsi"
            }
          ]}
          autoPlayInterval={0}
          client:load 
        />
      </div>
    </section>

    <section class="mb-12">
      <Heading level={2} className="mb-6">
        Marca individual (sin navegación)
      </Heading>
      
      <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
        <BannerPromotionalComponent 
          brands={[
            {
              id: "single-brand",
              imageUrl: "https://via.placeholder.com/630x120/f8fafc/64748b?text=MARCA+DESTACADA",
              imageAlt: "Marca destacada",
              brandName: "Marca Destacada"
            }
          ]}
          autoPlayInterval={0}
          disableNavigation={true}
          showDots={false}
          client:load 
        />
      </div>
    </section>

    <section class="mb-12">
      <Heading level={2} className="mb-6">
        Carrusel con enlaces de marcas
      </Heading>
      
      <div class="p-6 border border-gray-200 rounded-lg bg-gray-50">
        <BannerPromotionalComponent 
          brands={[
            {
              id: "apple",
              imageUrl: "https://via.placeholder.com/630x120/000000/ffffff?text=APPLE",
              imageAlt: "Marca Apple",
              brandName: "Apple",
              href: "https://apple.com"
            },
            {
              id: "samsung",
              imageUrl: "https://via.placeholder.com/630x120/1428a0/ffffff?text=SAMSUNG",
              imageAlt: "Marca Samsung",
              brandName: "Samsung",
              href: "https://samsung.com"
            }
          ]}
          autoPlayInterval={0}
          client:load 
        />
        <p class="text-sm text-gray-600 mt-4 text-center">
          Haz clic en las marcas para visitar sus sitios web
        </p>
      </div>
    </section>
  </main>
</Layout>