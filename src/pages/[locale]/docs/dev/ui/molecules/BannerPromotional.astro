---
import Layout from "@/layouts/Layout.astro";
import { getStaticLanguagePaths } from "@/i18n/utils";
import { Heading } from "@/components/atoms/Heading";
import { BannerPromotional as BannerPromotionalComponent } from "@/components/molecules/BannerPromotional";

export async function getStaticPaths() {
  return getStaticLanguagePaths();
}

const { locale } = Astro.params;
---

<Layout title="BannerPromotional - Carrusel de Marcas" locale={locale}>
  <main class="container mx-auto p-8">
    <Heading level={1} className="mb-8">
      BannerPromotional - Carrusel de Marcas
    </Heading>
    
    <section class="mb-12">
      <Heading level={2} className="mb-6">
        Banner Categor√≠as Patrocinadas
      </Heading>
      <div class="p-0 rounded-lg">
        <BannerPromotionalComponent client:load autoFetchCategories={true} />
      </div>
    </section>
  </main>
</Layout>