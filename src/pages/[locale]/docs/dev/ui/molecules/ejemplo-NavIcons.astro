---
import Layout from "@/layouts/Layout.astro";
import { getStaticLanguagePaths } from "@/i18n/utils";
import { NavIcons } from "@/components/molecules/NavIcons";

export async function getStaticPaths() {
  return getStaticLanguagePaths();
}
---

<Layout title="Ejemplo de NavIcons">
  <div class="max-w-4xl mx-auto my-10 space-y-8">
    <h2 class="text-2xl font-bold mb-4">NavIcons Molecule</h2>
    <p class="text-gray-600 mb-6">
      El componente NavIcons crea una navegación con iconos, etiquetas y badges opcionales.
    </p>

    <!-- Ejemplo básico horizontal -->
    <div class="space-y-4">
      <h3 class="text-xl font-semibold">Navegación Horizontal Básica</h3>
      <div class="p-4">
        <NavIcons 
          client:load
        />
      </div>
    </div>

    <!-- Con elementos personalizados -->
    <div class="space-y-4">
      <h3 class="text-xl font-semibold">Con Elementos Personalizados</h3>
      <div class="p-4">
        <NavIcons 
          client:load
          items={[
            {
              icon: "user",
              label: "Mi Perfil",
              onClick: () => console.log('Perfil clicked'),
              active: true
            },
            {
              icon: "envelope", 
              label: "Correos",
              onClick: () => console.log('Correos clicked')
            },
            {
              icon: "gear",
              label: "Configuración",
              onClick: () => console.log('Configuración clicked')
            },
            {
              icon: "chart-bar",
              label: "Estadísticas",
              onClick: () => console.log('Estadísticas clicked')
            }
          ]}
        />
      </div>
    </div>

    <!-- Navegación vertical -->
    <div class="space-y-4">
      <h3 class="text-xl font-semibold">Navegación Vertical</h3>
      <div class="p-4">
        <NavIcons 
          client:load
          orientation="vertical"
          items={[
            {
              icon: "house",
              label: "Inicio",
              onClick: () => console.log('Inicio clicked'),
              active: true
            },
            {
              icon: "magnifying-glass",
              label: "Buscar",
              onClick: () => console.log('Buscar clicked')
            },
            {
              icon: "heart",
              label: "Favoritos",
              onClick: () => console.log('Favoritos clicked')
            },
            {
              icon: "shopping-cart",
              label: "Carrito",
              onClick: () => console.log('Carrito clicked')
            }
          ]}
        />
      </div>
    </div>

    <!-- Sin etiquetas (solo iconos) -->
    <div class="space-y-4">
      <h3 class="text-xl font-semibold">Solo Iconos (Sin Etiquetas)</h3>
      <div class="p-4">
        <NavIcons 
          client:load
          showLabels={false}
          items={[
            {
              icon: "house",
              label: "Inicio",
              onClick: () => console.log('Inicio clicked'),
              active: true
            },
            {
              icon: "user",
              label: "Perfil",
              onClick: () => console.log('Perfil clicked')
            },
            {
              icon: "envelope",
              label: "Mensajes",
              onClick: () => console.log('Mensajes clicked')
            },
            {
              icon: "gear",
              label: "Configuración",
              onClick: () => console.log('Configuración clicked')
            }
          ]}
        />
      </div>
    </div>

    <!-- Navegación de dashboard -->
    <div class="space-y-4">
      <h3 class="text-xl font-semibold">Navegación de Dashboard</h3>
      <div class="p-4">
        <NavIcons 
          client:load
          items={[
            {
              icon: "chart-bar",
              label: "Analytics",
              onClick: () => console.log('Analytics clicked'),
              active: true
            },
            {
              icon: "users",
              label: "Usuarios",
              onClick: () => console.log('Usuarios clicked')
            },
            {
              icon: "folder",
              label: "Proyectos",
              onClick: () => console.log('Proyectos clicked')
            },
            {
              icon: "calendar",
              label: "Calendario",
              onClick: () => console.log('Calendario clicked')
            },
            {
              icon: "gear",
              label: "Admin",
              onClick: () => console.log('Admin clicked')
            }
          ]}
        />
      </div>
    </div>

    <!-- Sidebar vertical -->
    <div class="space-y-4">
      <h3 class="text-xl font-semibold">Sidebar Vertical</h3>
      <div class="p-4 bg-gray-50 max-w-xs">
        <NavIcons 
          client:load
          orientation="vertical"
          items={[
            {
              icon: "house",
              label: "Dashboard",
              onClick: () => console.log('Dashboard clicked'),
              active: true
            },
            {
              icon: "package",
              label: "Productos",
              onClick: () => console.log('Productos clicked')
            },
            {
              icon: "shopping-cart",
              label: "Pedidos",
              onClick: () => console.log('Pedidos clicked')
            },
            {
              icon: "users",
              label: "Clientes",
              onClick: () => console.log('Clientes clicked')
            },
            {
              icon: "chart-line",
              label: "Reportes",
              onClick: () => console.log('Reportes clicked')
            },
            {
              icon: "gear",
              label: "Configuración",
              onClick: () => console.log('Configuración clicked')
            }
          ]}
        />
      </div>
    </div>

    <!-- Navegación móvil bottom -->
    <div class="space-y-4">
      <h3 class="text-xl font-semibold">Navegación Móvil (Bottom Bar)</h3>
      <div class="p-4 bg-white shadow-lg max-w-sm mx-auto">
        <NavIcons 
          client:load
          items={[
            {
              icon: "house",
              label: "Inicio",
              onClick: () => console.log('Inicio clicked'),
              active: true
            },
            {
              icon: "magnifying-glass",
              label: "Buscar",
              onClick: () => console.log('Buscar clicked')
            },
            {
              icon: "plus-circle",
              label: "Crear",
              onClick: () => console.log('Crear clicked')
            },
            {
              icon: "heart",
              label: "Me Gusta",
              onClick: () => console.log('Me Gusta clicked')
            },
            {
              icon: "user-circle",
              label: "Perfil",
              onClick: () => console.log('Perfil clicked')
            }
          ]}
        />
      </div>
    </div>
  </div>
</Layout>