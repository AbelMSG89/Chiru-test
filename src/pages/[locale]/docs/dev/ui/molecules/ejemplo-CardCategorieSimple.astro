---
import Layout from "@/layouts/Layout.astro";
import { getStaticLanguagePaths } from "@/i18n/utils";
import { CardCategorieSimple } from "@/components/molecules/CardCategorieSimple";

export async function getStaticPaths() {
  return getStaticLanguagePaths();
}

const mockCategories = [
  { id: "1", urlImage: "https://ae01.alicdn.com/kf/S0449e88b491d456fa942fe22f32f9b413.png", name: "Moda mujer" },
  { id: "2", urlImage: "https://i.pinimg.com/1200x/60/7a/9c/607a9c900ae6504ea31bc47780400143.jpg", name: "Tecnología" },
];
---

<Layout title="Categorías">
  <div class="max-w-5xl mx-auto my-10">
    <h2 class="text-xl font-bold mb-6">Explora Categorías</h2>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
      {mockCategories.map((cat) => (
        <CardCategorieSimple client:load size="large" dataCategorie={cat} />
      ))}
    </div>
  </div>
</Layout>
