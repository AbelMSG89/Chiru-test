---
/**
 * AppShell Template
 * Uso: Envolver páginas que requieren Header + Navbar + Footer recurrentes.
 * Props:
 *  - title?: string -> Título de la página (fallback en Layout base si se extiende en el futuro)
 *  - hideHeader?: boolean
 *  - hideNavbar?: boolean
 *  - hideFooter?: boolean
 *  - className?: string -> clases para el contenedor principal
 * Exclusiones: Páginas de login / register pueden omitir este template y usar Layout base.
 */
import { Header } from "@/components/organisms/Header";
import { Navbar } from "@/components/organisms/Navbar";
import { Footer } from "@/components/organisms/Footer";

interface Props {
  title?: string;
  hideHeader?: boolean;
  hideNavbar?: boolean;
  hideFooter?: boolean;
  className?: string;
}

const { hideHeader = false, hideNavbar = false, hideFooter = false, className = "" } = Astro.props as Props;
---

<div class={`min-h-screen flex flex-col bg-gray-50 ${className}`}>
  {!hideHeader && <Header client:load />}
  {!hideNavbar && <Navbar client:load />}

  <main class="flex-1 w-full mx-auto px-4 py-6">
    <slot />
  </main>

  {!hideFooter && <Footer client:load />}
</div>
